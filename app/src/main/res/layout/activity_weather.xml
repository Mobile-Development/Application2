<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/w_location"
        android:layout_width="302dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="474dp"
        android:hint="请输入地点" />

    <ImageButton
        android:id="@+id/w_search"
        android:layout_width="62dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="475dp"/>
<!--        android:background="@drawable/query" -->

    <ImageButton
        android:id="@+id/w_return"
        android:layout_width="69dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="340dp"
        android:layout_marginRight="340dp"
        android:layout_marginBottom="546dp"/>
<!--         android:background="@drawable/returnb"-->

    <TextView
        android:id="@+id/w_currentWea"
        android:layout_width="match_parent"
        android:layout_height="453dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:scrollbars="vertical" />

</RelativeLayout>