<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.ui.pedometer.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.myapplication.ui.records.RecordsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_records" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.myapplication.ui.setting.SettingFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_setting" />

    <fragment
        android:id="@+id/navigation_trace"
        android:name="com.example.myapplication.ui.location.TraceFragment"
        android:label="@string/title_trace"
        tools:layout="@layout/fragment_trace" />

    <fragment
        android:id="@+id/navigation_weather"
        android:name="com.example.myapplication.ui.weather.WeatherFragment"
        android:label="@string/title_weather"
        tools:layout="@layout/fragment_weather" />
</navigation>